#!/usr/bin/with-contenv bashio
# ==============================================================================
# Home Assistant Add-on: youtube-dl
# Runs youtube-dl
# ==============================================================================

bashio::log.info 'Starting youtube-dl...'

# Run youtube-dl
if bashio::config.true 'STDIN_mode'; then
    bashio::log.info "Starting in STDIN_mode..."
    while read -r input; do
        bashio::log.info "Read input: ${input}"
        exec /usr/bin/youtube-dl.sh
    done
else
    exec /usr/bin/youtube-dl.sh
fi









